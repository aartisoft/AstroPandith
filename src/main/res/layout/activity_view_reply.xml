                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="#141414"
                    android:text="CUSTOMER DETAILS"/>


