                    android:id="@+id/hide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:layout_margin="5dp"
                    android:onClick="Hide"
